<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ToggleNet</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/togglenet-dashboard.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="@Url.Page("/Index")">
                <i class="bi bi-toggles me-2 fs-4"></i>
                <span class="fw-bold">ToggleNet</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link @(ViewData["Title"]?.ToString() == "Feature Flags Dashboard" ? "active" : "")" href="@Url.Page("/Index")">Feature Flags</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewData["Title"]?.ToString() == "Targeting Rules" ? "active" : "")" href="@Url.Page("/TargetingRules")">
                            <i class="bi bi-target me-1"></i> Targeting Rules
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewData["Title"]?.ToString() == "Feature Analytics" ? "active" : "")" href="@Url.Page("/Analytics")">
                            <i class="bi bi-graph-up me-1"></i> Analytics
                        </a>
                    </li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"]?.ToString() == "Manage Users" ? "active" : "")" href="@Url.Page("/ManageUsers")">Manage Users</a>
                        </li>
                    }
                </ul>
                <ul class="navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="@Url.Page("/Logout")">Logout</a></li>
                            </ul>
                        </li>
                    }
                </ul>
                <span class="badge bg-light text-primary ms-3">v1.0.0</span>
            </div>
        </div>
    </nav>

    <main role="main" class="container-fluid px-0">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted py-4 mt-5 bg-light">
        <div class="container text-center text-md-start">
            <div class="row align-items-center">
                <div class="col-md-6 mb-3 mb-md-0">
                    <span class="d-block d-md-inline-block">&copy; @DateTime.Now.Year - ToggleNet</span>
                    <span class="mx-md-2 d-none d-md-inline-block">|</span>
                    <span class="d-block d-md-inline-block">Feature Flag Management System</span>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <a href="https://github.com/carloluisito/ToggleNet" class="btn btn-sm btn-outline-secondary" target="_blank">
                        <i class="bi bi-github me-2"></i>GitHub
                    </a>
                    <a href="#" class="btn btn-sm btn-outline-secondary ms-2">
                        <i class="bi bi-book me-2"></i>Documentation
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
